                                               Margin="0,2,4,0"
                                               IsHitTestVisible="False"
                                               Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}" />
                                    <TextBlock Grid.Row="1"
                                               Margin="6"
                                               Text="{Binding Title}"
                                               TextWrapping="Wrap"
                                               FontSize="14"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               TextAlignment="Center" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- å³ä¾§ï¼šè¯¦æƒ… + é¢„è§ˆåŒºåŸŸ -->
        <Border Grid.Row="1" Grid.Column="1" Margin="6,0,10,10" Background="#181818" CornerRadius="8">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <!-- å›ºå®šåŒºåŸŸç”¨äºŽæ¸¸æˆä»‹ç»ï¼Œå¯æ»šåŠ¨ -->
