<Window x:Class="TeknoParrotBigBox.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}"
        Width="360"
        Height="180"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#222">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock x:Name="LabelLanguage" Text="{Binding LanguageLabel}" Foreground="#EEE" FontSize="14" Margin="0,0,0,8" />
            <ComboBox x:Name="ComboLanguage"
                      Width="200"
                      HorizontalAlignment="Left"
                      SelectedIndex="{Binding LanguageIndex, Mode=TwoWay}"
                      FontSize="13" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ButtonOk" Content="{Binding ButtonOkText}" Width="80" Height="28" Margin="0,0,8,0" Click="ButtonOk_Click" IsDefault="True" />
            <Button x:Name="ButtonCancel" Content="{Binding ButtonCancelText}" Width="80" Height="28" IsCancel="True" Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</Window>
