<Window x:Class="TeknoParrotBigBox.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}"
        Width="480"
        Height="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#222">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock x:Name="LabelLanguage" Text="{Binding LanguageLabel}" Foreground="#EEE" FontSize="14" Margin="0,0,0,8" />
            <ComboBox x:Name="ComboLanguage"
                      Width="200"
                      HorizontalAlignment="Left"
                      SelectedIndex="{Binding LanguageIndex, Mode=TwoWay}"
                      FontSize="13" />
            <TextBlock x:Name="LabelMediaPath" Text="{Binding MediaPathLabel}" Foreground="#EEE" FontSize="14" Margin="0,12,0,8" />
            <TextBox x:Name="TextBoxMediaPath"
                     Height="24"
                     Margin="0,0,0,0"
                     Padding="4,2"
                     FontSize="12"
                     VerticalContentAlignment="Center"
                     Text="{Binding MediaPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <CheckBox x:Name="CheckBoxEnableDebugLog"
                      Content="{Binding EnableDebugLogLabel}"
                      IsChecked="{Binding EnableDebugLog, Mode=TwoWay}"
                      Foreground="#EEE"
                      FontSize="13"
                      Margin="0,12,0,0" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="ButtonOk" Content="{Binding ButtonOkText}" Width="80" Height="28" Margin="0,0,8,0" Click="ButtonOk_Click" IsDefault="True" />
            <Button x:Name="ButtonCancel" Content="{Binding ButtonCancelText}" Width="80" Height="28" IsCancel="True" Click="ButtonCancel_Click" />
        </StackPanel>
    </Grid>
</Window>
